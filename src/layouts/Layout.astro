---
import '@fontsource-variable/bricolage-grotesque/index.css';
import '@fontsource-variable/inter/index.css';
import { SEO } from 'astro-seo';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL('/favicon.svg', Astro.site).toString();

const {
  title,
  description = 'Servicios profesionales especializados en procesos concursales conforme a la legislación chilena. Liquidador concursal con más de 20 años de experiencia.',
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    <meta name="color-scheme" content="light" />

    <SEO
      title={title}
      description={description}
      canonical={canonicalURL}
      twitter={{
        creator: '@liquidadorconcursal',
        site: '@liquidadorconcursal',
        card: 'summary_large_image',
      }}
      openGraph={{
        basic: {
          title: title,
          type: 'website',
          image: resolvedImageWithDomain,
          url: canonicalURL,
        },
        optional: {
          description: description,
          siteName: 'Liquidador Concursal',
        },
        image: {
          url: resolvedImageWithDomain,
          width: 1200,
          height: 630,
          alt: 'Liquidador Concursal - Servicios Profesionales',
          type: 'image/svg+xml',
        },
      }}
    />
  </head>
  <body class="bg-white text-slate-900 font-inter">
    <a
      href="#main"
      class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:bg-white focus:text-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 px-2.5 py-0.5 rounded-sm z-[1000]"
      >Saltar al contenido</a
    >
    <main id="main" tabindex="-1">
      <slot />
    </main>
  </body>
</html>

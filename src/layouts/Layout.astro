---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Luis Aguilera Arteaga - Liquidador Concursal registrado en SUPERIR. Información para involucrados en procesos concursales según Ley 20.720"
    />
    <meta
      name="keywords"
      content="liquidador concursal, luis aguilera arteaga, ley 20720, superir, proceso concursal, liquidación empresas, chile"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Luis Aguilera Arteaga" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Liquidador Concursal registrado en SUPERIR. Contacto para involucrados en procesos concursales."
    />
    <meta property="og:type" content="website" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <slot />
  </body>
</html>
